.container {
  padding: 0 32rpx;
  padding-top: 10rpx;
  padding-bottom: 96rpx;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.back-button {
  padding: 16rpx;
}

.custom-back-btn {
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.combo-badge {
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(239, 68, 68, 0.2);
  display: flex;
  align-items: center;
}

.combo-text {
  margin-left: 12rpx;
  font-size: 36rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 48rpx;
}

.mb-large {
  margin-bottom: 64rpx;
}

.text-gray {
  color: #6B7280;
  font-size: 28rpx;
}

.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.result-icon.correct {
  background: linear-gradient(135deg, #10B981, #34D399);
  box-shadow: 0 16rpx 32rpx rgba(16, 185, 129, 0.2);
}

.result-icon.incorrect {
  background: linear-gradient(135deg, #EF4444, #F87171);
  box-shadow: 0 16rpx 32rpx rgba(239, 68, 68, 0.2);
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.result-desc {
  font-size: 32rpx;
  color: #6B7280;
  text-align: center;
}

.text-success {
  color: #10B981;
  font-weight: bold;
}

.text-error {
  color: #EF4444;
  font-weight: bold;
}

.dialogue-card {
  padding: 32rpx;
}

.message-row {
  display: flex;
  margin-bottom: 48rpx;
  position: relative;
}

.message-row-reverse {
  display: flex;
  flex-direction: row-reverse;
  margin-bottom: 48rpx;
  position: relative;
}

.message-row:last-child,
.message-row-reverse:last-child {
  margin-bottom: 0;
}

.avatar-container {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  position: relative;
}

.avatar-a {
  background-color: #9ca3af;
  margin-right: 16rpx;
}

.avatar-b {
  background-color: #577CE2;
  margin-left: 16rpx;
}

.ai-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ef4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-weight: bold;
}

.message-bubble {
  max-width: 80%;
  padding: 24rpx;
  border-radius: 36rpx;
}

.message-bubble-a {
  background-color: #e5e7eb;
  border-radius: 36rpx 36rpx 36rpx 8rpx;
}

.message-bubble-b {
  background-color: #e7eeff;
  border-radius: 36rpx 36rpx 8rpx 36rpx;
}

.ai-analysis-card {
  padding: 32rpx;
}

.analysis-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
}

.analysis-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.analysis-item {
  display: flex;
  align-items: flex-start;
}

.analysis-icon {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.analysis-text {
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
}

/* 新的下一题按钮样式 */
.next-button {
  width: 87vw;
  display: block;
  margin: 0 auto;
  transition: transform 0.15s ease;
  height: 112rpx; /* 新增: 固定高度，提前占位，消除闪烁 */
  line-height: 112rpx; /* 补充: 与高度一致，防止出现垂直偏移 */
  object-fit: contain;
}

.next-button:active {
  transform: scale(0.94);
}

/* 连击提示样式 */
.combo-notification {
  position: fixed;
  left: 50%;
  bottom: 260rpx; /* 固定最终位置，使用 translateY 控制进出场 */
  transform: translate(-50%, 150%);
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  border-radius: 24rpx;
  padding: 24rpx 40rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3);
  display: flex;
  align-items: center;
  opacity: 0;
  transition: transform 0.5s ease, opacity 0.5s ease;
  z-index: 100;
}

.combo-notification.show {
  transform: translate(-50%, 0);
  opacity: 1;
}

@keyframes comboFadeInOut {
  0% {
    transform: translate(-50%, 150%);
    opacity: 0;
  }
  20% {
    transform: translate(-50%, 0);
    opacity: 1;
  }
  80% {
    transform: translate(-50%, 0);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, 150%);
    opacity: 0;
  }
}

/* 导航栏样式 */
.t-navbar {
  background: transparent !important;
}


.expand-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  margin-top: 24rpx;
  color: #6B7280;
  font-size: 28rpx;
  background-color: #F9FAFB;
  border-radius: 16rpx;
  transition: transform 0.1s;
}

.expand-button:active {
  transform: scale(0.95);
}

.expand-button text {
  margin-right: 8rpx;
} 