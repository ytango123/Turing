.container {
  padding: 0 32rpx;
  padding-top: 10rpx;
  padding-bottom: 96rpx;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.back-button {
  padding: 16rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.combo-badge {
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(239, 68, 68, 0.2);
  display: flex;
  align-items: center;
}

.combo-text {
  margin-left: 8rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 48rpx;
}

.mb-large {
  margin-bottom: 64rpx;
}

.text-gray {
  color: #6B7280;
  font-size: 28rpx;
}

.dialogue-card {
  padding: 32rpx;
}

.message-row {
  display: flex;
  margin-bottom: 48rpx;
}

.message-row-reverse {
  display: flex;
  flex-direction: row-reverse;
  margin-bottom: 48rpx;
}

.message-row:last-child,
.message-row-reverse:last-child {
  margin-bottom: 0;
}

.avatar-container {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.avatar-a {
  background-color: #9ca3af;
  margin-right: 16rpx;
}

.avatar-b {
  background-color: #8b5cf6;
  margin-left: 16rpx;
}

.message-bubble {
  max-width: 80%;
  padding: 24rpx;
  border-radius: 36rpx;
}

.message-bubble-a {
  background-color: #e5e7eb;
  border-radius: 36rpx 36rpx 36rpx 8rpx;
}

.message-bubble-b {
  background-color: #ede9fe;
  border-radius: 36rpx 36rpx 8rpx 36rpx;
}

.play-button-container {
  display: flex;
  justify-content: center;
}

.play-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.play-button:active {
  transform: scale(0.95);
}

.hint-text {
  text-align: center;
  font-size: 28rpx;
  color: #6B7280;
}

.judgment-buttons {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.judgment-button {
  background-color: white;
  border: 4rpx solid #E5E7EB;
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.2s;
}

.judgment-button:active {
  transform: scale(0.98);
  background-color: #F9FAFB;
}

.judgment-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.judgment-desc {
  font-size: 24rpx;
  color: #6B7280;
}

/* 导航栏样式 */
.t-navbar {
  background: transparent !important;
}

/* 进度条样式 */
.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #E5E7EB;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  border-radius: 8rpx;
}

.custom-back-btn {
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 