.welcome-container {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  height: 100vh;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.content {
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 48rpx;
  color: white;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.logo .iconfont {
  font-size: 94rpx;
  color: #6366F1;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-align: center;
}

.subtitle {
  font-size: 36rpx;
  opacity: 0.9;
  text-align: center;
  margin-bottom: 48rpx;
}

.description {
  text-align: center;
  margin-bottom: 64rpx;
}

.desc-text {
  display: block;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  opacity: 0.8;
}

.start-button {
  background-color: white;
  color: #6366F1;
  font-weight: bold;
  padding: 24rpx 80rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transform: scale(1);
  transition: transform 0.2s;
}

.start-button:active {
  transform: scale(0.95);
}

.user-count {
  margin-top: 48rpx;
  font-size: 24rpx;
  opacity: 0.7;
}

