.welcome-container {
  height: 100vh;
  width: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "PingFang SC", "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei UI", sans-serif;
  letter-spacing: 0.01em;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -10;
}

/* 背景已经简化，去掉 blur */
.robot {
  position: relative;      /* 进入文档流，使下方元素自动跟随 */
  width: 22vh;
  height: 22vh;
  align-self: flex-end;    /* 靠右显示 */
  margin-top: 7vh;
  margin-right: 4vh;     /* 露出半身 */
  z-index: 1;
  overflow: visible;
}

.robot-all {
  width: 170%;
  height: 170%;

}

.title-img {
  width: 100vw;   /* 更加醒目 */
  max-width: 540px;
  opacity: 0;


}

.title-img.show {
  opacity: 1;
}

/* 标题整体下移一些 */
.title-img.zh {
  transform: translateY(5vh);         /* 保持原位 */
  margin-top: 8vh;  

}
.title-img.en {
  transform: translateY(-14vh);         /* 保持原位 */
  margin-top: 8vh;         /* 位于机器人下方一定距离 */
}

/* 固定位置布局，不再依赖JS动态计算 */
.content-img {
  width: 64vw;
  max-width:360px;
  z-index: 10;
  position: absolute;
  left: 50%;
  top: 62vh; /* 固定在页面42%高度处 */
  transform: translateX(-50%);
  opacity: 0;
  pointer-events: none;
}

.content-img.show {
  opacity: 1;
  pointer-events: auto;
}

/* 开始按钮默认隐藏 */
.start-button-img {
  position: absolute;
  bottom: 15vh;
  width: 128px;
  height: auto;
  z-index: 10;
  opacity: 0;
  pointer-events: none;
  transition: transform 0.15s ease;
}

.start-button-img.show {
  opacity: 1;
  pointer-events: auto;
}

/* 点击缩放反馈 */
.start-button-img:active {
  transform: scale(0.93);
}

/* 用户数默认隐藏 */
.user-count-img {
  position: absolute;
  bottom: 10vh;
  
  z-index: 10;
  opacity: 0;
  pointer-events: none;
}

.user-count-img.show {
  opacity: 1;
  pointer-events: auto;
}

.user-count-img.zh{
  width: 150px;
  height: auto;
}

.user-count-img.en{
  width: 220px;
  height: auto;
}


/* 语言切换默认隐藏 */
.language-switch-img {
  position: absolute;
  bottom: 24px;
  right: 28px;
  width: 38px;
  height: auto;
  z-index: 10;
  transition: transform 0.2s ease-in-out;
  opacity: 0;
  pointer-events: none;
}

.language-switch-img.show {
  opacity: 1;
  pointer-events: auto;
}

.language-switch-img:active {
  transform: scale(0.92);
}