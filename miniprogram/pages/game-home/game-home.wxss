.container {
  padding: 0 32rpx;
  padding-bottom: 32rpx;
}

.user-info-card {
  padding: 32rpx;
}

.flex-start {
  display: flex;
  align-items: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mr-small {
  margin-right: 16rpx;
}

.mr-medium {
  margin-right: 32rpx;
}

.mx-small {
  margin-left: 8rpx;
  margin-right: 8rpx;
}

.mb-small {
  margin-bottom: 8rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mb-large {
  margin-bottom: 48rpx;
}

.mt-small {
  margin-top: 8rpx;
}

.flex-1 {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
}

.text-gray {
  color: #6B7280;
}

.text-sm {
  font-size: 24rpx;
}

.text-primary {
  color: #4a6ed3;
}

.font-bold {
  font-weight: bold;
}

.dot {
  font-size: 20rpx;
}

.section-title {
  display:flex;
  align-items:center;
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  margin-left:16rpx;
}
.title-decor{
  width:14rpx;
  height:38rpx;
  border-radius:8rpx;
  background:#AADAFF;
  margin-right:15rpx;
}

.game-modes {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.game-card {
  border: 4rpx solid #E5E7EB;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s;
}

.game-card:active {
  transform: scale(0.98);
}

.game-icon-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #EEF2FF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.game-icon-container.purple {
  background-color: #F5F3FF;
}

.game-mode-title {
  font-weight: bold;
  font-size: 32rpx;
  color: #1F2937;
}

.game-mode-desc {
  font-size: 28rpx;
  color: #6B7280;
}

.coming-soon-tag {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  background-color: #F3F4F6;
  font-size: 24rpx;
  color: #6B7280;
}

/* 展开/收起按钮样式 */

.avatar-wrapper {
  position: relative;
}

.avatar,
.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

/* 文字头像背景 */
.avatar {
  background: linear-gradient(135deg, #7072f0, #4767c2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

/* 图片头像覆盖裁切 */
.avatar-img {
  object-fit: cover;
}

/* ========== Level Progress Bar ========== */
.user-info-card .progress-bar-fill {
  height: 100%;
  background: repeating-linear-gradient(
              45deg,
              rgba(255,255,255,0.15) 0rpx,
              rgba(255,255,255,0.15) 8rpx,
              transparent 8rpx,
              transparent 16rpx
            ),
            linear-gradient(90deg, #FBBF24, #F59E0B);
  border-radius: 8rpx;
} 

/* 新版挑战模式卡片样式 */
.challenge-modes {
  display: flex;
  flex-direction: row;
  gap: 3rpx;
  padding-top: 60rpx; /* 为顶部图标预留空间 */
}

.mode-card {
  position: relative;
  width: 320rpx;
  transition: transform 0.2s ease;
}

.mode-card-pressed {
  transform: scale(0.95);
}

.card-icon {
  position: absolute;
  width: 190rpx;
  height: auto;
  top: -76rpx; /* 让图标超出卡片顶部 */
  left: 51%;
  transform: translateX(-50%);
  z-index: 2;
}

.card-icon-bot {
  position: absolute;
  width: 196rpx;
  height: auto;
  top: -66rpx; /* 让图标超出卡片顶部 */
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

.card-image {
  width: 100%;
  height: auto;
  border-radius: 40rpx;
  display: block;
  position: relative;
  z-index: 1;
} 

/* ========== New Ranking Section Styles ========== */
.rank-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.podium {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  gap: 48rpx;
  margin-bottom: 24rpx;
  margin-top: 30rpx;
}

/* Podium item ordering & height */
.rank-1 {
  order: 2;
  transform: translateY(-34rpx);
}
.rank-2 {
  order: 1;
  transform: translateY(30rpx);
}
.rank-3 {
  order: 3;
  transform: translateY(90rpx);
}

.podium-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 160rpx; /* 统一列宽，防止因头像类型不同导致间距不均 */
}

/* ------------ Podium avatar ------------ */
.podium-avatar,
.podium-avatar-fallback {
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
  object-fit: cover;
  display:block;
}

.podium-avatar-fallback {
  background: linear-gradient(135deg, #7072f0, #4767c2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 54rpx;
}

.podium-name {
  margin-top: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #1F2937;
}

/* 修改积分背景 */
.podium-points {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #6B7280;
  background-color: #F5F1F1;
  padding: 12rpx 26rpx;
  border-radius: 24rpx;
}

/* 冠军标志 */
.crown-icon {
  position: absolute;
  top: -64rpx;
  width: 94rpx;
  height: auto;
}


.rank-bar {
  width: 600rpx;
  height: auto;
  margin-top: -36rpx;
  margin-bottom: -70rpx;
  z-index: 0;
}

.rest-card {
  width: 100%;
  position: relative;
  z-index: 1;
  background-color: #E8F0FF;
  border-radius: 40rpx;
}

/* 顶部凹槽 */
.rest-notch {
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 60rpx;
  background-color: #E8F0FF;
  border-top-left-radius: 320rpx;
  border-top-right-radius: 320rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.rest-notch-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ABAFB6;
  margin-bottom: 30rpx;
}

.rest-list {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 46rpx 40rpx 32rpx;
  box-sizing: border-box;
  z-index: 2; /* 位于蓝色背景之上 */
}

.rest-item {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 42rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  padding: 40rpx 32rpx 40rpx 114rpx; /* 左侧预留 140rpx 给排名圆圈 */
  margin-bottom: 32rpx;
}

.rest-item:last-child {
  margin-bottom: 0;
}

.rest-rank {
  position: absolute;
  left: 36rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  border: 4rpx solid #E5E7EB;
  background-color: #FFFFFF;
  color: #909090;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 调整列表内头像间距 */
.rest-avatar,
.rest-avatar-fallback {
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 30rpx;

}

.rest-avatar-fallback {
  background: linear-gradient(135deg, #7072f0, #4767c2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 48rpx;
}

.rest-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.rest-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 18rpx;
}

.rest-points {
  font-size: 28rpx;
  color: #6B7280;
} 

/* 排行榜提示小字 */
.rank-tip {
  margin-top: -54rpx;
  font-size: 24rpx;
  color: #9CA3AF;
  text-align: center;
  z-index :2;
}

/* ========== Voice Clone Modes Styles ========== */
.voice-modes {
  display: flex;
  flex-direction: column;
  align-items: center; /* 居中 */
  gap: 6rpx;
  padding-top: 16rpx; /* 与 challenge-modes 对齐顶部图标区域 */
}

/* 语音克隆卡片宽度更大 */
.voice-modes .mode-card {
  width: 660rpx;
}

.voice-modes .card-icon {
  /* 覆盖通用 card-icon 设置，使图标位于卡片左侧居中 */
  top: 46%;                /* 垂直居中 */
  left: 40rpx;            /* 向左偏移使一半露出 */
  transform: translateY(-50%); /* 取消水平位移，仅保持垂直居中 */
  width: 130rpx;
}