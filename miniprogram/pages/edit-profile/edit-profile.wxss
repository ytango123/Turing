.container {
  padding: 32rpx;
}

/* 滚动区域（预留底部按钮空间） */
.scroll-area {
  height: calc(100vh - 200rpx);
  padding-bottom: 120rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.avatar-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.avatar-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  object-fit: cover;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6c8add , #4a4ddd );
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: white;
  font-weight: bold;
}

.hint-text {
  font-size: 28rpx;
  color: #1F2937;
}

/* 卡片化表单 */
.form-section {
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
  padding: 8rpx 32rpx;
  margin-bottom: 64rpx;
}

/* 表单项分割线 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
  min-height: 96rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #1F2937;
  flex-shrink: 0;
  margin-right: 32rpx;
}

.input, .picker-value {
  flex: 1;
  text-align: right;
  font-size: 32rpx;
  color: #1F2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 渐变主按钮 */
.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #6c8add , #4a4ddd );
  border-radius: 44rpx;
  margin-top: 64rpx;
  border: none;
}

.save-btn:active {
  opacity: 0.9;
} 

/* 保存按钮SVG */
.save-button {
  width: 87vw;
  display: block;
  margin: 64rpx auto 0;
  transition: transform 0.15s ease;
}
.save-button:active {
  transform: scale(0.94);
} 