.container {
  padding: 0 32rpx;
  padding-bottom: 96rpx;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-start {
  display: flex;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mr-small {
  margin-right: 16rpx;
}

.mr-medium {
  margin-right: 32rpx;
}

.mx-small {
  margin-left: 8rpx;
  margin-right: 8rpx;
}

.mt-small {
  margin-top: 8rpx;
}

.flex-1 {
  flex: 1;
}

.text-gray {
  color: #6B7280;
}

.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-primary {
  color: #577CE2;
}

.font-bold {
  font-weight: bold;
}

.text-right {
  text-align: right;
}

.dot {
  font-size: 20rpx;
}

.user-info-card {
  padding: 48rpx;
  position: relative;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7072f0, #4767c2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: white;
  font-weight: bold;
  position: relative;
}

/* 外圈描边 */
.avatar-frame {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid #f59e0b;
  border-radius: 50%;
  box-sizing: border-box;
  pointer-events: none;
}

.username {
  font-size: 40rpx;
  font-weight: bold;
  color: #1F2937;
}

/* 统计卡片样式 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

/* 统计卡片基础样式 */
.stat-card {
  border-radius: 36rpx;
  padding: 22rpx;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  box-shadow: none;
}

.stat-icon {
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  /* 移除阴影 */
  box-shadow: none;
}

/* 不同卡片的颜色方案 */
.accuracy-card {
  background-color: #F0F6E8;
}
.accuracy-card .stat-icon .iconfont {
  color: #57B404;
}

.combo-card {
  background-color: #DBECFF;
}
.combo-card .stat-icon .iconfont {
  color: #385DB6;
}

.achievement-card {
  background-color: #FFEDF9;
}
.achievement-card .stat-icon .iconfont {
  color: #C95065;
}

.rank-card {
  background-color: #F5F2E1;
}
.rank-card .stat-icon .iconfont {
  color: #E2A030;
}

/* 调整图标大小 */
.stat-icon .iconfont {
  font-size: 48rpx;
}

/* 调整文字样式 */
.stat-content {
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 46rpx;
  font-weight: bold;
  color: #1F2937;
}

/* 不同卡片的背景色 */
.accuracy-card .stat-icon {
  background-color: #FFFFFF;
}

.combo-card .stat-icon {
  background-color: #FFFFFF;
}

.achievement-card .stat-icon {
  background-color: #FFFFFF;
}

.rank-card .stat-icon {
  background-color: #FFFFFF;
}

.tabs {
  display: flex;
}

/* Tabs 样式调整 */
.tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-text {
  font-size: 32rpx;
  color: #6B7280;
  font-weight: 500;
}

.tab-text.active {
  color: #577CE2;
  font-weight: bold;
}

.tab-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #577CE2;
  margin-top: 12rpx;
}

/* 成就徽章网格 */
.achievements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 210rpx; /* 每行固定 210rpx 高度 */
  gap: 32rpx 18rpx;
  justify-items: center;
  align-items: center;
  margin-top: 32rpx; /* 与上方统计区留间距 */
}

.badge-item {
  width: 210rpx;  /* 设置固定宽度，使用最大徽章尺寸 */
  height: 210rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
  will-change: transform;  /* 优化变换性能 */
  align-self: center;
}

.badge-item image {
  width: 100%;
  height: 100%;
  object-fit: contain;  /* 保持图片比例 */
}

.badge-item:active {
  transform: scale(0.94);
}

.badge-item.locked image {
  filter: grayscale(100%);
  opacity: 0.75;
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 560rpx;
  background: #ffffff;
  border-radius: 88rpx;
  padding: 76rpx 30rpx 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.modal-badge-wrapper {
  width: 240rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.modal-badge {
  width: 100%;
  height: 100%;
}

.modal-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #3b5ba5;
  margin-bottom: 14rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #9CA3AF;
  text-align: center;
  margin-bottom: 74rpx;
}

.modal-close {
  /* 旧样式弃用 */
}

.modal-close-btn {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn-img {
  width: 200rpx;
  height: 90rpx;
}

/* 移除旧成就列表样式不再使用 (可留作备份) */

.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.achievement {
  border: 4rpx solid #E5E7EB;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s;
}

.achievement.unlocked {
  border-color: #10B981;
  background-color: #ECFDF5;
}

.achievement.locked {
  opacity: 0.7;
  background-color: #F3F4F6;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.achievement-icon.unlocked {
  background-color: #D1FAE5;
}

.achievement-icon.locked {
  background-color: #F3F4F6;
}

.achievement-title {
  font-weight: bold;
  font-size: 32rpx;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 28rpx;
  color: #6B7280;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background-color: white;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
}

.history-date {
  font-size: 24rpx;
  color: #6B7280;
  width: 120rpx;
}

.history-content {
  flex: 1;
}

.history-title {
  font-weight: bold;
  font-size: 32rpx;
  color: #1F2937;
  margin-bottom: 4rpx;
}

.history-stats {
  font-size: 24rpx;
  color: #6B7280;
}

.history-score {
  font-weight: bold;
  font-size: 36rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.history-score.good {
  color: #10B981;
  background-color: #ECFDF5;
}

.history-score.average {
  color: #F59E0B;
  background-color: #FEF3C7;
}

.history-score.poor {
  color: #EF4444;
  background-color: #FEE2E2;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 32rpx;
  color: #9CA3AF;
}

.ranking-list {
  display: flex;
  flex-direction: column;
}

.ranking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
}

.ranking-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  margin-right: 24rpx;
}

.ranking-number.top-1 {
  background-color: #FBBF24;
}

.ranking-number.top-2 {
  background-color: #9CA3AF;
}

.ranking-number.top-3 {
  background-color: #B45309;
}

.ranking-number.you {
  background-color: #EEF2FF;
  color: #577CE2;
}

.navbar-right {
  padding-right: 16rpx;
}

.settings-button {
  padding: 8rpx;
}

/* 操作按钮组 */
.action-buttons {
  position: absolute;
  top: -20rpx;
  right: 32rpx;
  display: flex;
  gap: 24rpx;
  z-index: 10;
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border: 2rpx solid #ffffff;
}

/* 移除旧的编辑按钮样式 */
.edit-icon {
  display: none;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  object-fit: cover;
}

/* ========== Level Progress Bar ========== */
.user-info-card .progress-bar-fill {
  height: 100%;
  background: repeating-linear-gradient(
              45deg,
              rgba(255,255,255,0.15) 0rpx,
              rgba(255,255,255,0.15) 8rpx,
              transparent 8rpx,
              transparent 16rpx
            ),
            linear-gradient(90deg, #FBBF24, #F59E0B);
  border-radius: 8rpx;
} 

/* ====== 新统计布局 ====== */
.stats-section {
  display: flex;
  align-items: center;
  gap: 36rpx;
}

.accuracy-ring-wrapper {
  position: relative;
  width: 200rpx;
  height: 180rpx;
  margin-left: 22rpx;
}


.circle-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.accuracy-rate {
  font-size: 42rpx;
  font-weight: bold;
  color: #1F2937;
}

.accuracy-label {
  font-size: 20rpx;
  color: #6B7280;
}

.stats-summary-card {
  flex: 1;
  background: #FFFFFF;
  border-radius: 36rpx;
  padding: 28rpx 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.summary-icon-combo {
  color: #385DB6;
}

.summary-icon-achievement {
  color: #C95065;
}

.summary-icon-rank {
  color: #E2A030;
}

.summary-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 10rpx;
}

.summary-label {
  font-size: 20rpx;
  color: #6B7280;
} 

.summary-divider {
  width: 2rpx;
  height: 120rpx; /* 分割线长度小于卡片高度 */
  background: linear-gradient(to bottom, transparent 0%, #E5E7EB 50%, transparent 100%);
