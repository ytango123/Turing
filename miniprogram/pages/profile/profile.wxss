  position: absolute;
  top: 38rpx;
  right: 38rpx;
  display: flex;
  align-items: center;
  z-index: 10;
}

.coins-container {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 26rpx;
  padding: 8rpx 18rpx;
  border: 6rpx solid #EAEEED;
}

.coin-icon {
