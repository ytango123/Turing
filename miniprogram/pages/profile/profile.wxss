}

.tabs {
  display: flex;
}

/* Tabs 样式调整 */
.tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.tab-text {
  font-size: 32rpx;
  color: #6B7280;
  font-weight: 500;
  position: relative;
  z-index: 2;
}

.tab-text.active {
  color: #1F2937;
  font-weight: 800;
}

.tab-underline {
  height: 11rpx;
  border-radius: 16rpx;
  background: linear-gradient(90deg,rgb(215, 238, 251), #9ED4F6);
 
  position: relative;
  z-index: 1;
}
.tab-underline.zh {
  width: 60rpx;
  margin-top: -9rpx;
}
.tab-underline.en {
  margin-top: -11rpx;
  width: 100rpx;
}

/* 成就徽章网格 */
.achievements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 210rpx; /* 每行固定 210rpx 高度 */
  gap: 32rpx 18rpx;
  justify-items: center;
  align-items: center;
  margin-top: 32rpx; /* 与上方统计区留间距 */
}

.badge-item {
  width: 210rpx;  /* 设置固定宽度，使用最大徽章尺寸 */
  height: 210rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
  will-change: transform;  /* 优化变换性能 */
  align-self: center;
}

.badge-item image {
  width: 100%;
  height: 100%;
  object-fit: contain;  /* 保持图片比例 */
}

.badge-item:active {
  transform: scale(0.94);
}

.badge-item.locked image {
  filter: grayscale(100%);
  opacity: 0.75;
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 560rpx;
  background: #ffffff;
  border-radius: 88rpx;
  padding: 76rpx 30rpx 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.modal-badge-wrapper {
  width: 240rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.modal-badge {
