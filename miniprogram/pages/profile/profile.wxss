  height: 32rpx;
  margin-right: 16rpx;
}

.coins-amount {
  font-size: 30rpx;
  font-weight: bold;
  color: #1F2937;
}


.avatar-wrapper {
  position: relative;
  width: 136rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7072f0, #4767c2);
  display: flex;
  align-items: center;
