/* === 反馈弹窗 === */
.feedback-modal {
  position: fixed;
  top: 0; left: 0; right:0; bottom:0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.modal-mask {
  position:absolute;
  top:0; left:0; right:0; bottom:0;
  background: rgba(0,0,0,0.5);
  backdrop-filter: blur(4rpx);
}

.feedback-modal .modal-content {
  width: 80%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  box-sizing: border-box;
  position: relative;
  display:flex;
  flex-direction: column;
  gap:32rpx;
  animation: fadeIn 0.25s ease-out;
}

.modal-header {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  text-align:center;
}

.modal-textarea {
  width: 100%;
  min-height: 300rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  justify-content: center;
  gap: 2rpx;
}

.modal-btn-img {
  width: 300rpx;
  height: 90rpx;
}

@keyframes fadeIn {
  from { opacity:0; transform: scale(0.9);} 
  to {opacity:1; transform:scale(1);} 
} 