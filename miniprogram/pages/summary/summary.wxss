/* 进度条样式 */
.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #E5E7EB;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  /* 底色渐变 */
  background: repeating-linear-gradient(
              45deg,
              rgba(255,255,255,0.15) 0rpx,
              rgba(255,255,255,0.15) 8rpx,
              transparent 8rpx,
              transparent 16rpx
            ),
            linear-gradient(90deg, rgb(59, 197, 75),rgb(43, 205, 62));
  border-radius: 8rpx;
} 

/* 弹窗 */
