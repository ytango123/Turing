/* reset previous */
.container,
.intro-card { display:none; }

/* 新整体容器 */
.intro-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 背景 SVG */
.intro-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 标题容器 */
.title-container {
  position: absolute;
  left: 50%;
  top: 45vh; /* 位于屏幕上方1/4位置 */
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.title-img {
  width: 30vw;
  max-width: 230rpx;
  object-fit: contain;
}

/* 描述内容容器 - 位于标题下方 */
.description-container {
  position: absolute;
  left: 50%;
  top: 56vh; /* 位于标题下方 */
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.description-img {
  width: 68vw;
  max-width: 560rpx;
  object-fit: contain;
}

/* 题库选择容器 - 位于描述下方 */
.select-container {
  position: absolute;
  left: 50%;
  top: 71vh; /* 位于描述下方 */
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  gap: 42rpx;
}

.select-btn {
  width: 16vh;
  object-fit: contain;
  transition: transform 0.15s ease;
}

.select-btn:active {
  transform: scale(0.93);
}

/* 开始按钮容器 - 位于选择按钮下方 */
.button-container {
  position: absolute;
  left: 50%;
  top: 85vh; /* 位于选择按钮下方 */
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* SVG 按钮样式 */
.start-button-img {
  width: 18vh;
  max-width: 400rpx;
  display: none; /* 默认隐藏 */
  transition: transform 0.15s ease;
  will-change: transform; /* 提示浏览器预先做好变换准备 */
  backface-visibility: hidden; /* 防止闪烁 */
  -webkit-backface-visibility: hidden;
  -webkit-transform-style: preserve-3d;
}

.start-button-img.show {
  display: block; /* 显示选中的按钮 */
}

/* 使用active伪类代替JS控制的transform */
.start-button-img:active {
  transform: scale(0.93);
} 