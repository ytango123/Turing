/* reset previous */
.container,
.intro-card { display:none; }

/* 新整体容器 */
.intro-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 背景 SVG */
.intro-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 重新定位按钮容器至底部中央 */
.button-container {
  position: absolute;
  left: 50%;
  bottom: 160rpx;
  transform: translateX(-50%);
  width: 250rpx;
  height: 100rpx;
}

/* SVG 按钮样式 */
.start-button-img {
  width: 250rpx;
  max-width: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
  transition: transform 0.15s ease;
  opacity: 0;
  pointer-events: none;
  will-change: transform; /* 提示浏览器预先做好变换准备 */
  backface-visibility: hidden; /* 防止闪烁 */
  -webkit-backface-visibility: hidden;
  -webkit-transform-style: preserve-3d;
}

.start-button-img.show {
  opacity: 1;
  pointer-events: auto;
}

/* 使用active伪类代替JS控制的transform */
.start-button-img:active {
  transform: scale(0.93);
} 