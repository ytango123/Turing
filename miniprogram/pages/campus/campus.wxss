/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background: transparent;
}

.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  color: rgb(0, 0, 0);
  font-size: 18px;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB", "Microsoft Yahei", sans-serif;
}

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 0 !important;
  padding-bottom: 120rpx;
}

/* 顶部卡片样式 */
.top-card {
  width: 100vw;
  margin-bottom: 32rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 0;
  z-index: 1;
}

/* 任务卡片容器 */
.task-cards {
  margin: 0 42rpx;
}

/* 任务卡片样式 */
.task-card {
  position: relative;
  margin-bottom: 24rpx;
  transition: transform 0.2s ease;
}

.task-card:active {
  transform: scale(0.98);
}

.task-card image {
  width: 100%;
  height: auto;
}

/* 任务图标样式 */
.task-icon {
  position: absolute;
  left: 46rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
}

.task-icon image {
  width: 100%;
  height: 100%;
}

/* 任务按钮样式 */
.task-button {
  position: absolute;
  right: 34rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 150rpx;
  height: 68rpx;
  z-index: 2;
  background: transparent;
  border: none;
  padding: 0;
}

.task-button::after {
  border: none;
}

.task-button image {
  width: 100%;
  height: 100%;
} 