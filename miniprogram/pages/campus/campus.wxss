/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background: transparent;
}

.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  color: rgb(0, 0, 0);
  font-size: 18px;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB", "Microsoft Yahei", sans-serif;
}

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 0 !important;
  padding-bottom: 120rpx;
}

/* 顶部卡片样式 */
.top-card {
  width: 100vw;
  margin-bottom: 32rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 0;
  z-index: 1;
}

/* 任务卡片容器 */
.task-cards {
  margin: 0 42rpx;
}

/* 任务卡片样式 */
.task-card {
  position: relative;
  margin-bottom: 24rpx;
  transition: transform 0.2s ease;
}

.task-card:active {
  transform: scale(0.98);
}

.task-card image {
  width: 100%;
  height: auto;
}

/* 任务图标样式 */
.task-icon {
  position: absolute;
  left: 46rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
}

.task-icon image {
  width: 100%;
  height: 100%;
}

/* 任务按钮样式 */
.task-button {
  position: absolute;
  right: 34rpx;
  top: 50%;
  transform: translateY(-50%);
  min-width: 76px; /* 最小宽度 */
  width: auto; /* 宽度自适应 */
  height: 36px;
  z-index: 2;
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  font-weight: 600; /* 中文默认字重 */
  color:#535353;
  box-shadow: 0 -4px 0 0 rgba(0, 0, 0, 0.15) inset;
  padding: 0 12px 2px; /* 添加左右内边距，使文字向上偏移 */
  line-height: 1; /* 设置为1确保文本垂直居中 */
}

/* 英文字体加粗 */
.task-button.en {
  font-weight: 700 !important;
}

.task-button.yellow {
  background: #FCDB37;
}

.task-button.green {
  color:#FFFFFF;
  background: #19C087;
}

.task-button::after {
  border: none;
}

/* 邀请弹窗样式 */
.invite-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.invite-modal {
  width: 80%;
  max-width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 60rpx 30rpx 80rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.invite-close {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.invite-close image {
  width: 64rpx;
  height: 64rpx;
}

.invite-robot {
  width: 260rpx;
  height: 260rpx;
  margin-bottom: 40rpx;
}

.invite-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  text-align: center;
}

.invite-content {
  font-size: 26rpx;
  color:hsl(0, 0.00%, 63.50%);
  text-align: center;
  margin-bottom: 40rpx;
  padding: 0 130rpx;
  line-height: 1.5;
}

.invite-code-container {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  width: 100%;
}

.invite-code-box {
  width: 70rpx;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 18rpx;
  margin: 0 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  color:#535353;
}

.invite-share-btn {
  width: 68%;
  height: 88rpx;
  background: #FCDB37;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #535353;
  box-shadow: 0 -5px 0 0 rgba(0, 0, 0, 0.15) inset;
  padding-bottom: 6rpx;
  padding: 0 12px 4px; /* 添加左右内边距，使文字向上偏移 */
  line-height: 1;
}

.invite-share-btn.en {
  font-weight: 700 !important;
}

.invite-share-btn::after {
  border: none;
}

/* 分享按钮样式 */
.share-btn {
  margin-top: 20rpx;
  background: #19C087 !important;
  color: #FFFFFF !important;
} 