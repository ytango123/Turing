.custom-back-btn {
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  width: 40rpx;
} 

/* 结果阶段样式 */
.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

/* 调整结果 svg margin 与顶部导航间距 */
.result-svg {
  width: 260rpx;
  margin-bottom: 26rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1F2937;
  
  margin-bottom: 16rpx;
}

.result-desc {
  font-size: 32rpx;
  color: #6B7280;
  text-align: center;
}

