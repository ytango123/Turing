/* 结果页动态连击提示 */
.combo-toast {
  position: fixed;
  top: 160rpx;
  right: 40rpx;
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  color: #fff;
  padding: 16rpx 28rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(239,68,68,0.3);
  transform: translateY(100%) scale(0.9);
  opacity: 0;
  transition: transform 0.5s ease, opacity 0.5s ease;
  z-index: 1200;
}

.combo-toast.show {
  transform: translateY(0) scale(1);
  opacity: 1;
} 

/* phase 切换动画，避免闪屏 */
.phase-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 添加页面加载状态样式 */
.page-loading {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phase-hidden {
  opacity: 0;
  pointer-events: none;
  visibility: hidden;
  position: absolute;
  width: 0;
  height: 0;
  overflow: hidden;
  z-index: -1;
  transition: opacity 0.01s ease; /* 快速淡出 */
}
.phase-show {
  opacity: 1;
  pointer-events: auto;
  transition: opacity 0.3s ease; /* 稍慢淡入 */
  position: relative;
  z-index: 1;
} 

/* 再听一次小字 */
.relisten {
  text-align: center;
  font-size: 28rpx;
  color: #577CE2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.relisten:active {
  opacity: 0.6;
}

