.container {
  padding: 0 32rpx;
  padding-top: 10rpx;
  padding-bottom: 40rpx; /* 增加底部内边距 */
  min-height: 100vh; /* 确保至少占满整个视口高度 */
  box-sizing: border-box; /* 确保内边距不会增加元素总宽高 */
  display: flex;
  flex-direction: column;
}

.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom, 20px);
  min-height: 20px; /* 兜底值 */
}

.result-phase .container {
  padding-bottom: 96rpx;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.back-button {
  padding: 16rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.combo-badge {
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(239, 68, 68, 0.2);
  display: flex;
  align-items: center;
}

.combo-text {
  margin-left: 8rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 48rpx;
}

.mb-large {
  margin-bottom: 64rpx;
  
}

.text-gray {
  color: #6B7280;
  font-size: 28rpx;
  font-weight:bold;
}

.dialogue-card {
  padding: 32rpx;
}

.message-row {
  display: flex;
  margin-bottom: 48rpx;
}

.message-row-reverse {
  display: flex;
  flex-direction: row-reverse;
  margin-bottom: 48rpx;
}

.message-row:last-child,
.message-row-reverse:last-child {
  margin-bottom: 0;
}

.avatar-container {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  position: relative;
}

.avatar-a {
  background-color: #9ca3af;
  margin-right: 16rpx;
}

.avatar-b {
  background-color: #577CE2;
  margin-left: 16rpx;
}

.message-bubble {
  max-width: 80%;
  padding: 24rpx;
  border-radius: 36rpx;
}

.message-bubble-a {
  background-color: #e5e7eb;
  border-radius: 36rpx 36rpx 36rpx 8rpx;
}

.message-bubble-b {
  background-color: #e7eeff;
  border-radius: 36rpx 36rpx 8rpx 36rpx;
}

/* 音频进度条样式 */
.audio-progress-container {
  width: 82%; /* 将宽度从100%改为80%，使其变短 */
  margin: 0 auto 44rpx; /* 水平居中并保持24rpx的底部外边距 */
  height: 50rpx; /* 增加容器高度以容纳滑块 */
  display: flex;
  align-items: center;
  position: relative;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent; /* 去掉整个组件的触摸高亮 */
}

.audio-progress-container .progress-bar-track {
  width: 100%;
  height: 14rpx;
  background-color: #E5E7EB; /* 灰色未播放区域 */
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.audio-progress-container .progress-bar-fill {
  height: 100%;
  background: #7190E6; /* 紫色播放区域 */
  border-radius: 6rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.audio-progress-container .progress-slider {
  width: 24px; /* 34px */
  height: 20px; /* 30px */
  background-color: #FFFFFF;
  border-radius: 6px; /* 较大的圆角 */
  box-shadow: 0 -3px 0 rgba(0, 0, 0, 0.15) inset; /* 内部阴影 */
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  /* -- 新增：禁用用户选择，去掉移动滑块时的选中遮罩 -- */
  -webkit-user-select: none;
  user-select: none;
  -webkit-tap-highlight-color: transparent; /* 去掉触摸高亮 */
}

.audio-progress-container .slider-decorator {
  width: 10px;
  height: 8px;
  background-image:
    linear-gradient(to right, #E1E1E1, #E1E1E1),
    linear-gradient(to right, #E1E1E1, #E1E1E1),
    linear-gradient(to right, #E1E1E1, #E1E1E1);
  background-size: 2px 100%, 2px 100%, 2px 100%;
  background-repeat: no-repeat;
  background-position: 0 0, 4px 0, 8px 0;
  transform: translateY(-1rpx)
}

/* 展开/折叠按钮样式 */
.expand-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  margin-top: 24rpx;
  color: #6B7280;
  font-size: 28rpx;
  background-color: #F9FAFB;
  border-radius: 16rpx;
  cursor: pointer;
}

.expand-button text {
  margin-right: 8rpx;
}

.expand-button:active {
  background-color: #F3F4F6;
}

.play-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.play-button {
  width: 128rpx;   /* 约等于 100px */
  height: 128rpx;
  border-radius: 50%; /* 约 96px */
  background: #7190E6;
  box-shadow: 0 -12rpx 0 rgba(0, 0, 0, 0.13) inset;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.15s ease;
  margin-bottom: 32rpx;
  position: relative;
}

/* 加载图标样式 */
.loading-icon {
  width: 48rpx;
  height: 48rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-top: 8rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.play-button:active {
  transform: scale(0.95);
}

.audio-id {
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 8rpx;
}

.hint-text {
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #6B7280;
  padding: 0 10rpx;

}

/* 新：判断选项SVG容器 */
.judgment-images {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 48rpx;
  margin-bottom: 60rpx; /* 增加底部外边距 */
  padding-bottom: 20rpx; /* 额外的内边距 */
}

/* SVG 基础样式 */
.judge-img {
  width: 39vw;
  transition: transform 0.15s ease;
  height: 88rpx; /* 新增: 固定高度，提前占位，消除闪烁 */
  object-fit: contain; /* 新增: 保证缩放后不裁剪 */
  pointer-events: auto;
}

.judge-img.show {
  opacity: 1;
  pointer-events: auto;
}

.judge-img:active {
  transform: scale(0.94);
}

/* 导航栏样式 */
.t-navbar {
