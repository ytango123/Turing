/**app.wxss**/

@import "./assets/iconfont/iconfont.wxss";

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  background-color: #f9fafb;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
}

.level-badge {
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  border-radius: 24rpx;
  padding: 4rpx 20rpx;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.progress-bar {
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #FBBF24, #F59E0B);
  border-radius: 6rpx;
}

.container {
  padding: 32rpx;
  box-sizing: border-box;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-primary {
  color: #577CE2;
}

.text-secondary {
  color: #577CE2;
}

.text-gray {
  color: #6B7280;
}

.font-bold {
  font-weight: bold;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mb-large {
  margin-bottom: 48rpx;
}

.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 32rpx;
}

.mt-large {
  margin-top: 48rpx;
}

.full-width-button {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #676af1, #4a6ed3);
  color: white;
  font-weight: bold;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366F1, #4a6ed3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

.combo-badge {
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(239, 68, 68, 0.2);
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* 导航栏样式 */
.t-navbar {
  --td-navbar-color: #1F2937;
  --td-navbar-bg-color: #f9fafb;
  margin-bottom: 16rpx;
}

.t-navbar__center-title {
  font-weight: bold;
}

.text-regular {
  font-weight: 430;
}

.text-medium {
  font-weight: 520;
}

.text-semibold {
  font-weight: 580;
}

.text-bold {
  font-weight: 700;
}

.letter-spacing-sm {
  letter-spacing: 0.01em;
}

.letter-spacing-md {
  letter-spacing: 0.03em;
}

.letter-spacing-lg {
  letter-spacing: 0.06em;
}

/* === Level Badge Gradient Colors === */
.level-badge.level-green {
  background: linear-gradient(135deg, #34D399, #10B981);
}

.level-badge.level-blue {
  background: linear-gradient(135deg, #4a6ed3, #6366F1);
}

.level-badge.level-purple {
  background: linear-gradient(135deg, #8B5CF6, #A855F7);
}

.level-badge.level-orange {
  background: linear-gradient(135deg, #F59E0B, #F97316);
}

.level-badge.level-platinum {
  background: linear-gradient(135deg, #E6D7BA, rgb(214, 199, 170));
 
} 